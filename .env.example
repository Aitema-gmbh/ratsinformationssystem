# ===================================================================
# aitema|RIS - Environment Configuration
# ===================================================================
# Copy this file to .env and adjust values for your environment

# --- PostgreSQL ---
POSTGRES_DB=ris
POSTGRES_USER=ris
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_PORT=5432

# --- Redis ---
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_PORT=6379

# --- Elasticsearch ---
ES_PORT=9200
ES_PASSWORD=CHANGE_ME_ES_PASSWORD

# --- MinIO (Document Storage) ---
MINIO_ACCESS_KEY=ris_minio_admin
MINIO_SECRET_KEY=CHANGE_ME_MINIO_SECRET
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET=ris-documents

# --- Keycloak (SSO / BundID) ---
KEYCLOAK_PORT=8080
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_KEYCLOAK_ADMIN
KEYCLOAK_REALM=ris
KEYCLOAK_CLIENT_ID=ris-frontend
KEYCLOAK_HOSTNAME=auth.example.de

# --- Backend ---
BACKEND_PORT=8000
SECRET_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_64
ENVIRONMENT=development
LOG_LEVEL=DEBUG
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# --- Frontend ---
FRONTEND_PORT=3000

# --- Production URLs ---
PUBLIC_API_URL=https://api.ris.example.de
PUBLIC_KEYCLOAK_URL=https://auth.ris.example.de

# --- Sentry (optional) ---
SENTRY_DSN=

# --- DMS Bridge ---
DMS_TYPE=none
DMS_DVELOP_BASE_URL=
DMS_DVELOP_API_KEY=
